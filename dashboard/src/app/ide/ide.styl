.ide-page-frame
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  border none

.open-ide-container
  position relative
  color $white-color

.ide-page-loader
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin auto

.ide-page-loader-content img
  max-width 140px
  max-height 140px
  animation-name opacity
  animation-duration 2s
  animation-iteration-count infinite
  animation-timing-function ease-in-out

.open-ide-progress // projects-create-project
  padding 0 14px

.open-ide-progress-container // create-project-progress-panel
  margin-left 24px
  margin-top 32px
  margin-bottom 10px
  margin-right 24px
  background-color #fff
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.4)

.open-ide-progress-container .che-loader-animation-panel
  border none !important

.open-ide-progress-working-log // create-project-working-log
  margin-top 35px

@keyframes opacity
  0%, 100%
    opacity 0
  50%
    opacity 1
